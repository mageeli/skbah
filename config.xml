<?xml version='1.0' encoding='utf-8'?>
<widget id="net.ogail.skbah" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>سكبه</name>
    <description>
        سكبه متجر إلكتروني يهتم بما يخص الرجل من مستلزمات وهدايا وعطورات، يوفر أرقي الماركات العالمية بأفضل الأسعار، وبأفضل طرق الدفع المتعددة، يمكن التسوق والدفع بسهولة.
    </description>
    <author email="admin@skbah.com" href="https://skbah.com">
        skbah team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-device" spec="1.1.5" />
    <plugin name="cordova-plugin-device-motion" spec="1.2.4" />
    <plugin name="cordova-plugin-device-orientation" spec="1.0.6" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.7.0" />
    <plugin name="cordova-plugin-splashscreen" spec="4.0.2" />
    <plugin name="cordova-plugin-vibration" spec="2.1.4" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />

    <icon src="icon.png" />
    <icon  platform="android" src="res/icons/Icon-36x36.png"   qualifier="ldpi"/>
    <icon  platform="android" src="res/icons/Icon-48x48.png"   qualifier="mdpi"/>
    <icon  platform="android" src="res/icons/Icon-72x72.png"   qualifier="hdpi"/>
    <icon  platform="android" src="res/icons/Icon-96x96.png"   qualifier="xhdpi"/>
    <!--<icon src="res/icon/android/drawable-xxxhdpi/ic_launcher.png"   platform="android"     qualifier="xxxhdpi" />-->

    <icon  platform="ios" src="res/icons/60.png" width="60" height="60"/>
    <icon  platform="ios" src="res/icons/29.png" width="29" height="29"/>
    <icon  platform="ios" src="res/icons/58.png" width="58" height="58"/>
    <icon  platform="ios" src="res/icons/87.png" width="87" height="87"/>
    <icon  platform="ios" src="res/icons/120.png" width="120" height="120"/>
    <icon  platform="ios" src="res/icons/180.png" width="180" height="180"/>
    <icon  platform="ios" src="res/icons/76.png" width="76" height="76"/>
    <icon  platform="ios" src="res/icons/152.png" width="152" height="152"/>
    <icon  platform="ios" src="res/icons/40.png" width="40" height="40"/>
    <icon  platform="ios" src="res/icons/80.png" width="80" height="80"/>
    <icon  platform="ios" src="res/icons/57.png" width="57" height="57"/>
    <icon  platform="ios" src="res/icons/114.png" width="114" height="114"/>
    <icon  platform="ios" src="res/icons/72.png" width="72" height="72"/>
    <icon  platform="ios" src="res/icons/50.png" width="50" height="50"/>
    <icon  platform="ios" src="res/icons/100.png" width="100" height="100"/>
    <icon  platform="ios" src="res/icons/187.png" width="187" height="187"/>
    <icon  platform="ios" src="res/icons/144.png" width="144" height="144"/>

    <platform name="android">
        <splash src="res/screen/android/splashscreen-480x640.png" density="land-hdpi"/>
        <splash src="res/screen/android/splashscreen-320x426.png" density="land-ldpi"/>
        <splash src="res/screen/android/splashscreen-320x470.png" density="land-mdpi"/>
        <splash src="res/screen/android/android-720x960.png" density="land-xhdpi"/>
    </platform>

    <platform name="ios">
        <splash src="res/screen/ios/splashscreen-320x480.png" width="320" height="480"/>
        <splash src="res/screen/ios/splashscreen-640x960.png" width="640" height="960"/>
        <splash src="res/screen/ios/768-1024.png" width="768" height="1024"/>
        <splash src="res/screen/ios/1536-2048.png" width="1536" height="2048"/>
        <splash src="res/screen/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="res/screen/ios/splashscreen-640x1136.png" width="640" height="1136"/>
        <splash src="res/screen/ios/750-1334.png" width="750" height="1334"/>
        <splash src="res/screen/ios/1242-2208.png" width="1242" height="2208"/>
        <splash src="res/screen/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="orientation" value="portrait" />
    <access origin="http://sakbah.ogail.net*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="com.filfatstudios.spinnerdialog" spec="https://github.com/filfat-Studios-AB/cordova-plugin-spinnerdialog" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
</widget>
